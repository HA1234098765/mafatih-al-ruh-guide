# متغيرات البيئة لمشروع مفاتيح - مساعد المسلم الذكي الشامل
# انسخ هذا الملف إلى .env وأدخل القيم الصحيحة

# إعدادات التطبيق الأساسية
VITE_APP_NAME=مفاتيح
VITE_APP_VERSION=3.0.0
VITE_APP_AUTHOR=حذيفة الحذيفي
VITE_APP_ENVIRONMENT=development

# إعدادات الذكاء الاصطناعي
VITE_AI_API_KEY=A3rTgxpuMqlgK9xpPtNjMY8OzXNPjnPpfmWAfnxZ
VITE_AI_BASE_URL=https://api.openai.com/v1
VITE_USE_REAL_AI=true

# Groq AI Configuration
# للحصول على مفتاح مجاني، قم بزيارة: https://console.groq.com/
VITE_GROQ_API_KEY=your_groq_api_key_here

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Firebase Configuration (for notifications)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id

# OpenAI Configuration (alternative AI service)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# إعدادات APIs الإسلامية
VITE_QURAN_API_URL=https://api.quran.com/api/v4
VITE_HADITH_API_URL=https://dorar.net/dorar_api.json
VITE_ISLAMIC_DEVELOPERS_API=https://api.islamicdevelopers.com/v1
VITE_PRAYER_TIMES_API_URL=http://api.aladhan.com/v1/timings

# إعدادات Tanzil للنصوص القرآنية عالية الجودة
VITE_TANZIL_API_URL=http://tanzil.net/api
VITE_TANZIL_FORMAT=uthmani
VITE_USE_TANZIL=true

# إعدادات الأمان والتشفير
VITE_ENCRYPTION_KEY=your-encryption-key-here
VITE_JWT_SECRET=your-jwt-secret-here

# إعدادات التخزين والـ CDN
VITE_STORAGE_BUCKET=mafatih-storage
VITE_CDN_URL=https://cdn.mafatih.com

# إعدادات التطوير والتصحيح
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# إعدادات الإنتاج
VITE_PRODUCTION_URL=https://mafatih.com
VITE_API_RATE_LIMIT=100

# إعدادات التحليلات (اختيارية)
VITE_ANALYTICS_ID=your-analytics-id
VITE_SENTRY_DSN=your-sentry-dsn
